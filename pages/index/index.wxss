/**index.wxss**/
page {
    background-color: #191825;
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.content{
    /* background-color: gray; */
    flex-grow: 1;
}
    
.img_48{
    width: 48rpx;
    height: 48rpx;
}
.img_24{
    width: 24rpx;
    height: 24rpx;
}
.search{
    display: flex;
    flex-direction: row;
    height: 76rpx;
    /* background-color: yellow; */
    align-items: center;
    margin-top: 34rpx;
}
.user-head{
    margin-left: 34rpx;
    margin-right: 34rpx;
}
.search-view{
    background-color:#474651;
    border-radius: 8rpx;
    
    display: flex;
    flex-direction: row;
    align-items: center;
    
    width: 520rpx;
    height: 76rpx;
}
    
.search-icon{
    margin-left: 30rpx;
    margin-right: 30rpx;
}
.search-input{

}

.movie{
    width: 680rpx;
    height: 446rpx;
    
    margin: 0 auto;
    
    /* background-color: yellow; */
    
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    
    margin-top: 50rpx;
    margin-bottom: 50rpx;
}
    .movie-head{
    height: 48rpx;
    /* background-color: blue; */
    
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.movie-head .title{
    color: rgba(255, 255, 255, 1);
    font-size: 36rpx;
}
.movie-head .more{
    color: rgba(255, 255, 255, 1);
    font-size: 26rpx;
    line-height: 48rpx;

}
    
.movie-body{
    height: 368rpx;
    /* background-color:green; */
    
    display: flex;
    flex-direction: row;
    justify-content: space-between;
} 

.movie-body .item{
    width: 214rpx;
    height: 368rpx;
    /* background-color: purple; */
    
    display: flex;
    flex-direction: column;
    align-items: center;
}
.movie-body .item .movie-img{
    margin-top: 10rpx;
    width: 194rpx;
    height: 276rpx;
 
}
   
.movie-body .item .movie-name{
    color: rgba(255, 255, 255, 1);
    font-size: 22rpx;
    margin-top: 10rpx;
}
.movie-body .item .movie-desc{
    color:rgba(255, 255, 255, 1);
    font-size: 20rpx;
    margin-top: 4rpx;
}