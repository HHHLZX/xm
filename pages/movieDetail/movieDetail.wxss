/* pages/movieDetail/movieDetail.wxss */
page {
  background-color: #191825;
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.content {
  /* background-color: gray; */
  flex-grow: 1;
  overflow-y: scroll;
}

.img48 {
  width: 48rpx;
  height: 48rpx;
}

.search {
  display: flex;
  flex-direction: row;
  height: 76rpx;
  align-items: center;
  margin-top: 34rpx;
}

.user-head {
  margin-left: 34rpx;
  margin-right: 34rpx;
}

.user-search {
  margin-left: 34rpx;
  margin-right: 34rpx;
}

.bace {
  display: flex;
  flex-direction: row;
}

.img {
  width: 220rpx;
  height: 312rpx;
  margin-left: 32rpx;
  margin-top: 64rpx;
  margin-right: 40rpx;
  margin-bottom: 40rpx;
}

.desc {
  margin-left: 20rpx;
  margin-top: 64rpx;
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 32rpx;
  color: white;
}

.lan-year-long {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: white;
}

.rating {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: left;
}

.star {
  width: 38rpx;
  height: 38rpx;
}

.score {
  /* line-height: 19rpx;
  align-items: center; */
  margin-left: 5rpx;
  font-size: 28rpx;
  color: white;
}

.type {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: white;
}

.but {
  margin-top: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: left;
}

.play {
  margin-left: 0rpx;
  margin-right: 0rpx;
  width: 144rpx;
  height: 56rpx;
  background-color: #7D12FF;
}

.collect {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.collect image {
  width: 32rpx;
  height: 32rpx;
  align-items: center;
}

.play-container {
  display: flex;
  /* 设置为flex容器 */
  justify-content: center;
  /* 水平居中对齐子项 */
  align-items: center;
  /* 垂直居中对齐子项 */
  height: 100%;
  /* 确保容器高度与按钮高度一致 */
}

.coll {
  margin-left: 20rpx;
  background-color: transparent;
  border: 1px solid white;
}

.but-text {
  font-size: 26rpx;
  color: white;
}

.introduction {
  margin-top: 10rpx;
  margin-left: 34rpx;
  margin-right: 34rpx;
}

.movintro {
  font-size: 16px;
  font-weight: 500;
  letter-spacing: 0px;
  line-height: 21.22px;
  color: rgba(255, 255, 255, 1);
}

.introduct-detail {
  margin-top: 24rpx;
}

.movintrodetail {
  opacity: 0.5;
  font-size: 13px;
  line-height: 20px;
  color: rgba(255, 255, 255, 1);
  text-align: left;
  vertical-align: top;
}