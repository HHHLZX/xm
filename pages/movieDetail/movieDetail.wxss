/* pages/movieDetail/movieDetail.wxss */
page {
  background-color: #191825;
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.content {
  /* background-color: gray; */
  flex-grow: 1;
  overflow-y: scroll;
}

.img48 {
  width: 48rpx;
  height: 48rpx;
}

.search {
  display: flex;
  flex-direction: row;
  height: 76rpx;
  align-items: center;
  margin-top: 34rpx;
}

.user-head {
  margin-left: 34rpx;
  margin-right: 34rpx;
}

.user-search {
  margin-left: 34rpx;
  margin-right: 34rpx;
}

.bace {
  display: flex;
  flex-direction: row;
}

.img {
  width: 220rpx;
  height: 312rpx;
  margin-left: 32rpx;
  margin-top: 64rpx;
  margin-right: 40rpx;
  margin-bottom: 40rpx;
}

.desc {
  margin-left: 20rpx;
  margin-top: 64rpx;
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 32rpx;
  color: white;
}

.lan-year-long {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: white;
}

.rating {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: left;
}

.star {
  width: 38rpx;
  height: 38rpx;
}

.score {
  /* line-height: 19rpx;
  align-items: center; */
  margin-left: 5rpx;
  font-size: 28rpx;
  color: white;
}

.type {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: white;
}

.but {
  margin-top: 10px;
  display: flex;
  flex-direction: row;
}

.play {
  width: 144rpx;
  height: 56rpx;
}

.collect {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.collect image {
  width: 32rpx;
  height: 32rpx;
  align-items: center;
}

.play {
  background-color: #7D12FF;
}
.play-container {  
  display: flex; /* 设置为flex容器 */  
  justify-content: center; /* 水平居中对齐子项 */  
  align-items: center; /* 垂直居中对齐子项 */  
  height: 100%; /* 确保容器高度与按钮高度一致 */  
}

.coll {
  background-color: transparent;
  border: 1px solid white;
}

.but-text {
  font-size: 26rpx;
  color: white;
}